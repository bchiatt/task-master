extends ../shared/template

block content
  h3 Add a New Task
  form(method='post', action='/tasks/new')
    input(name='name', type='text', placeholder='medium', autofocus=true)
    input(name='due', type='date')
    input(name='photo', type='url', placeholder='url')
    input(name='tags', type='text', placeholder='home, work, play')
    select(name='priorityId', placeholder='')
      each priority in priorities
        option(value='#{priority._id}')= priority.name
    button Add Task
